---
import { Container } from './container';
import { Silk } from './silk';
---

<Container fullWidth>
  <div class="hero">
    <div class="effect">
      <div class="silk"><Silk client:load color="#ffffff" /></div>
      <div class="overlay"></div>
    </div>

    <div class="logo">
      <img alt="Timesy Logo" height={45} src="/logo.svg" width={38.97} />
    </div>

    <h2 class="title"><span>Timesy</span></h2>
    <h1 class="desc">A distraction-free online timer.</h1>
  </div>
</Container>

<style>
  .hero {
    position: relative;
    padding: 100px 0 30px;
    margin-bottom: 20px;
    overflow: hidden;
    text-align: center;

    & .effect {
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      width: 100%;
      height: 100%;
      overflow: hidden;

      &::before,
      &::after {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 100;
        width: 1px;
        height: 100%;
        content: '';
        background: linear-gradient(
          transparent,
          var(--color-neutral-200),
          transparent
        );
      }

      &::after {
        right: 0;
        left: unset;
      }

      & .silk {
        position: absolute;
        inset: 0;
        mask-image: linear-gradient(#000, transparent);
      }

      & .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgb(9 9 11 / 85%);
      }
    }

    & .logo {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 50px;
      height: 50px;
      margin: 0 auto;
      margin-bottom: 12px;
      background: linear-gradient(
        var(--color-neutral-50),
        var(--color-neutral-100)
      );
      border: 1px solid var(--color-neutral-200);
      border-radius: 16px;
      box-shadow: inset 0 -1px 0 var(--color-neutral-300);

      & img {
        height: 28px;
      }
    }

    & .title {
      font-family: var(--font-display);
      font-size: var(--font-2xlg);
      font-weight: 400;

      & span {
        background: linear-gradient(
          135deg,
          var(--color-foreground),
          var(--color-neutral-600)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    & .desc {
      margin-top: 8px;
      color: var(--color-foreground-subtle);
    }
  }
</style>
